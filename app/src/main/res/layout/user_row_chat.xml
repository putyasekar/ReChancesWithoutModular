<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/display_picture_chat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/pp_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:maxLength="20"
        android:text="@string/user_names"
        android:textColor="#0F1828"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/display_picture_chat"
        app:layout_constraintTop_toTopOf="@+id/display_picture_chat" />

    <TextView
        android:id="@+id/lastActive_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/_01_01_2021_10_00_am"
        android:textColor="#A4A4A4"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/username_chat"
        app:layout_constraintTop_toBottomOf="@+id/username_chat"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>