<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_container_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity">

    <ImageView
        android:id="@+id/background_motive"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-278dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="263dp"
        android:src="@drawable/illust_base" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="201dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="109dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/sign_up"
        android:textColor="#000"
        android:textSize="33sp" />

    <TextView
        android:id="@+id/full_name_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="177dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/full_name"
        android:textColor="#9796A1"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/full_name_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name_title"
        android:layout_marginTop="-540dp"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/full_name_field"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="@string/your_full_name_please"
            app:boxStrokeColor="#4C4EB9"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="#4E4A4A"
            app:shapeAppearanceOverlay="@style/Button4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/full_name_ET"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPersonName"
                android:textColor="#9A99A3"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/email_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-125dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/email"
        android:textColor="#9796A1"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/email_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_title"
        android:layout_marginTop="-418dp"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_field"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="@string/enter_your_email_here"
            app:boxStrokeColor="#4C4EB9"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="#4E4A4A"
            app:shapeAppearanceOverlay="@style/Button4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_ET"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress"
                android:textColor="#9A99A3"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/password_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-243dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/password"
        android:textColor="#9796A1"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/password_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_title"
        android:layout_marginTop="-302dp"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:hint="@string/enter_your_magic_spell_here"
            app:boxStrokeColor="#4C4EB9"
            app:boxStrokeWidth="1dp"
            app:endIconMode="password_toggle"
            app:hintTextColor="#9A99A3"
            app:shapeAppearanceOverlay="@style/Button4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_ET"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

