<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_container_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <ImageView
        android:id="@+id/background_motive"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-278dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="263dp"
        android:src="@drawable/illust_base" />

    <ImageView
        android:id="@+id/display_picture"
        android:layout_width="223dp"
        android:layout_height="225dp"
        android:layout_alignBottom="@+id/background_motive"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="171dp"
        android:src="@drawable/photo_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/display_picture"
        android:layout_alignEnd="@+id/display_picture"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="-97dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/user_full_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/display_picture"
        app:layout_constraintStart_toStartOf="@+id/display_picture" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="336dp"
            android:layout_height="254dp"
            android:layout_marginBottom="156dp"
            android:orientation="vertical"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/username"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/uname"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="111dp"
                android:layout_height="95dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/next" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="27dp"
                    android:background="#B3B3B3" />

            </LinearLayout>

            <TextView
                android:id="@+id/edit_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/notification"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/push_e_mail_mute"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/next_2"
                android:layout_width="111dp"
                android:layout_height="95dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="90dp"
                android:src="@drawable/next" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="152dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="27dp"
                    android:background="#B3B3B3" />

            </LinearLayout>

            <TextView
                android:id="@+id/edit_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/privacy"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/next_3"
                android:layout_width="111dp"
                android:layout_height="95dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="175dp"
                android:src="@drawable/next" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="141dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/log_out"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/Button5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>