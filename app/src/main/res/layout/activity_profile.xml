<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_container_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity">

    <ImageView
        android:id="@+id/background_motive"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="-278dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="263dp"
        android:src="@drawable/illust_base" />

    <ImageView
        android:id="@+id/display_picture"
        android:layout_width="223dp"
        android:layout_height="225dp"
        android:layout_alignBottom="@+id/background_motive"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="171dp"
        android:src="@drawable/photo_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/display_picture"
        android:layout_alignEnd="@+id/display_picture"
        android:layout_marginStart="-90dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="-97dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/user_full_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/display_picture"
        app:layout_constraintStart_toStartOf="@+id/display_picture" />

</RelativeLayout>