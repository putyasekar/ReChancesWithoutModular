<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    app:cardCornerRadius="10dp"
    android:layout_height="250dp"
    android:layout_marginLeft="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="220dp"
        android:layout_height="254dp">

        <ImageView
            android:id="@+id/recommended_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/buku" />

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/buku_bekas"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recommended_image" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="22dp"
            android:layout_height="15dp"
            app:layout_constraintStart_toStartOf="@+id/title_1"
            app:layout_constraintTop_toBottomOf="@+id/title_1"
            app:srcCompat="@drawable/free_delivery" />

        <TextView
            android:id="@+id/recommended_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/free_delivery"
            android:textColor="#333333"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/tags_1"
            android:layout_width="39dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tags"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/books"
            android:textAlignment="center"
            android:textColor="#8A8E9B"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.268" />

        <TextView
            android:id="@+id/tags_2"
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/tags"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/preloved"
            android:textAlignment="center"

            android:textColor="#8A8E9B"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/tags_1"
            app:layout_constraintStart_toEndOf="@+id/tags_1"
            app:layout_constraintTop_toTopOf="@+id/tags_1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tags_3"
            android:layout_width="80dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/tags"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/good_condition"
            android:textAlignment="center"
            android:textColor="#8A8E9B"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/tags_2"
            app:layout_constraintStart_toEndOf="@+id/tags_2"
            app:layout_constraintTop_toTopOf="@+id/tags_2"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>